generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id             String   @id @default(uuid())
  name           String
  email          String   @unique
  phoneNumber    String
  franchiseeName String
  gstin          String
  password       String
  createdAt      DateTime @default(now())
}

model Material {
  id            String   @id @default(uuid())
  materialCode  String   @unique
  description   String
  materialGroup String
  createdAt     DateTime @default(now())

  prices        MaterialPrice[]
  invoiceItems  InvoiceItem[]
  engineerStock EngineerStock[]
}

model MaterialPrice {
  id              String   @id @default(uuid())
  conditionRecord String
  conditionType   String
  rate            Float
  validFrom       DateTime
  validTo         DateTime

  materialId String
  material   Material @relation(fields: [materialId], references: [id])

  createdAt DateTime @default(now())
}

model Invoice {
  id            String   @id @default(uuid())
  invoiceNumber String   @unique
  invoiceDate   DateTime
  customerName  String

  createdAt DateTime @default(now())

  items InvoiceItem[]
}

model InvoiceItem {
  id String @id @default(uuid())

  invoiceId String
  invoice   Invoice @relation(fields: [invoiceId], references: [id])

  materialCode String
  material     Material @relation(fields: [materialCode], references: [materialCode])

  description String
  hsn         String?
  quantity    Float
  uom         String
  unitPrice   Float
  totalAmount Float
  cgst        Float
  sgst        Float

  createdAt DateTime @default(now())
}

model Engineer {
  id             String  @id @default(uuid())
  name           String
  email          String  @unique
  phoneNumber    String?
  specialization String?

  createdAt DateTime @default(now())

  assignedGoods EngineerStock[]
}

model EngineerStock {
  id String @id @default(uuid())

  engineerId String
  engineer   Engineer @relation(fields: [engineerId], references: [id])

  materialCode String
  material     Material @relation(fields: [materialCode], references: [materialCode])

  quantity Float

  createdAt DateTime @default(now())
}
